---
// New flashcard page
import Layout from '../../layouts/Layout.astro';
import { FlashcardForm } from '../../components/forms/FlashcardForm';
---

<Layout title="Dodaj nową fiszkę">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Dodaj nową fiszkę</h1>
        <p class="text-gray-600">Utwórz własną fiszkę do nauki</p>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <FlashcardForm client:load />
      </div>
    </div>
  </main>
</Layout>