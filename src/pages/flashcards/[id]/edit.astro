---
// Edit flashcard page
import Layout from '../../../layouts/Layout.astro';
import { FlashcardForm } from '../../../components/forms/FlashcardForm';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/flashcards');
}
---

<Layout title="Edytuj fiszkę">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Edytuj fiszkę</h1>
        <p class="text-gray-600">Modyfikuj zawartość swojej fiszki</p>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <FlashcardForm client:load data-flashcard-id={id} data-mode="edit" />
      </div>
    </div>
  </main>
</Layout>

